<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    android:orientation="vertical" >

    <include
        android:id="@+id/title_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/title_bar_back_right" />

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/female"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@drawable/selector_radio_white_blue"
            android:button="@null"
            android:gravity="center"
            android:text="@string/female"
            android:textColor="@color/selector_txt_chk_blue_white" />

        <RadioButton
            android:id="@+id/male"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@drawable/selector_radio_white_blue"
            android:button="@null"
            android:gravity="center"
            android:text="@string/male"
            android:textColor="@color/selector_txt_chk_blue_white" />

        <RadioButton
            android:id="@+id/gender_all"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/selector_radio_white_blue"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="@string/all"
            android:textColor="@color/selector_txt_chk_blue_white" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:text="@string/occurred_in_the_time"
        android:textColor="@color/black_grey" />

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/time_1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@drawable/selector_radio_white_blue"
            android:button="@null"
            android:gravity="center"
            android:text="30分钟"
            android:textColor="@color/selector_txt_chk_blue_white" />

        <RadioButton
            android:id="@+id/time_2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@drawable/selector_radio_white_blue"
            android:button="@null"
            android:gravity="center"
            android:text="1小时"
            android:textColor="@color/selector_txt_chk_blue_white" />

        <RadioButton
            android:id="@+id/time_3"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@drawable/selector_radio_white_blue"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="4小时"
            android:textColor="@color/selector_txt_chk_blue_white" />

        <RadioButton
            android:id="@+id/time_all"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/selector_radio_white_blue"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="全部"
            android:textColor="@color/selector_txt_chk_blue_white" />
    </RadioGroup>

    <RelativeLayout
        android:id="@+id/age"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_white_blue"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/age" />

        <ImageView
            android:id="@+id/right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:src="@drawable/right_arrow" />

        <TextView
            android:id="@+id/age_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/right_arrow"
            android:text="不限"
            android:textColor="@color/dark_grey" />
    </RelativeLayout>

</LinearLayout>