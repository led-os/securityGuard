<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/one_km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_radio_blue_rect"
            android:button="@null"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/one_km"
            android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/two_km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_radio_blue_rect"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/two_km"
            android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/three_km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_radio_blue_rect"
            android:button="@null"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/three_km"
            android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/four_km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_radio_blue_rect"
            android:button="@null"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/four_km"
            android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/five_km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_radio_blue_rect"
            android:button="@null"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/five_km"
            android:textColor="@color/white" />
    </RadioGroup>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/pop_bottom" />

</LinearLayout>