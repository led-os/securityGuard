<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey" >

    <include
        android:id="@+id/search"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/common_search_layout" />

    <LinearLayout
        android:id="@+id/phone_contacts"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_below="@id/search"
        android:background="@drawable/selector_white_blue"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:src="@drawable/contacts" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="@string/phone_contacts"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nearby"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_below="@id/phone_contacts"
        android:layout_marginTop="1dp"
        android:background="@drawable/selector_white_blue"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:src="@drawable/nearby" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="@string/nearby"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/game"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_below="@id/nearby"
        android:layout_marginTop="1dp"
        android:background="@drawable/selector_white_blue"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:src="@drawable/game" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="@string/game"
            android:textSize="20sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/cg_ad"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/cg_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:src="@drawable/childguard" />

        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/cg_icon"
            android:text="宝贝卫士"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/cg_icon"
            android:text="2000万用户的选择"
            android:textColor="@color/black_grey"
            android:textSize="16sp" />

        <Button
            android:id="@+id/cg_install"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:background="@drawable/selector_blue_btn"
            android:padding="5dp"
            android:text="安装"
            android:textColor="@color/white" />
    </RelativeLayout>

</RelativeLayout>