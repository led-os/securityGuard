<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/bar" >

        <RadioGroup
            android:id="@+id/rg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="85dp"
            android:layout_marginRight="85dp"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/myfrind_msg"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/selector_radio_rect_left_round_blue"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="@string/messages"
                android:textColor="@color/selector_txt_chk_blue_white" />

            <RadioButton
                android:id="@+id/myfrind_friend"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/selector_radio_rect_right_round_blue"
                android:button="@null"
                android:gravity="center"
                android:text="@string/friends"
                android:textColor="@color/selector_txt_chk_blue_white" />
        </RadioGroup>
    </RelativeLayout>

    <include
        android:id="@+id/reconnect_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/view_reconnect" />

</LinearLayout>