<resources>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/dlg_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Animations_PopUpMenu_Center">
        <item name="android:windowEnterAnimation">@anim/grow_from_topcenter</item>
        <item name="android:windowExitAnimation">@anim/shrink_to_topcenter</item>
    </style>

    <style name="Animations_PopUpMenu_Right">
        <item name="android:windowEnterAnimation">@anim/grow_from_topright_to_bottomleft</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_bottomleft_to_topright</item>
    </style>

    <style name="MenuDialogStyle">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="MenuDialogAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="LoadingProgressBarStyle">
　　        <item name="android:indeterminateDrawable">@anim/progress_loading_rotate</item>
　　        <item name="android:minWidth">15dp</item>
　　        <item name="android:maxWidth">25dp</item>
　　        <item name="android:minHeight">15dp</item>
　　        <item name="android:maxHeight">25dp</item>
    </style>

</resources>